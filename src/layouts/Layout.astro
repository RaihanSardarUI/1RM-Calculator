---
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Use our One Rep Max (1RM) Calculator to accurately estimate your max lifts using trusted, science-backed formulas. Clear guidance, fast results, free and mobile friendly." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- Favicon -->
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png" />
		<link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png" />
		<link rel="manifest" href="/site.webmanifest" />
		
		<!-- Meta tags -->
		<meta name="author" content="1RM Calculator" />
		<meta name="keywords" content="1RM calculator, one rep max, strength training, powerlifting, weightlifting, fitness calculator, gym calculator" />
		<meta property="og:title" content="{title}" />
		<meta property="og:description" content="Use our One Rep Max (1RM) Calculator to accurately estimate your max lifts using trusted, science-backed formulas. Clear guidance, fast results, free and mobile friendly." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://1rm-calculator.com" />
		<meta property="og:image" content="https://1rm-calculator.com/1RM Calculator.webp" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="{title}" />
		<meta name="twitter:description" content="Use our One Rep Max (1RM) Calculator to accurately estimate your max lifts using trusted, science-backed formulas. Clear guidance, fast results, free and mobile friendly." />
		<meta name="twitter:image" content="https://1rm-calculator.com/1RM Calculator.webp" />
		
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 font-['Inter'] text-white">
		<div class="min-h-screen flex flex-col">
			<header class="relative py-6 px-4 sm:px-6 lg:px-8 border-b border-slate-700/50 backdrop-blur-sm">
				<!-- Background gradient overlay -->
				<div class="absolute inset-0 bg-gradient-to-r from-purple-900/20 via-slate-900/40 to-pink-900/20"></div>
				
				<div class="relative max-w-7xl mx-auto">
					<!-- Navigation bar -->
					<nav class="flex items-center justify-between mb-6">
						<a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity duration-200">
							<img 
								src="/1RM Calculator.webp" 
								alt="1RM Calculator Logo" 
								class="w-12 h-12 rounded-xl shadow-lg border-2 border-purple-400/20 hover:border-purple-400/40 transition-all duration-200"
							/>
							<span class="text-xl font-semibold text-white">1RM Calculator</span>
						</a>
						
						<div class="hidden md:flex items-center space-x-6">
							<a href="/" class="text-slate-300 hover:text-purple-400 transition-colors duration-200 font-medium">Calculator</a>
							<a href="/guide" class="text-slate-300 hover:text-purple-400 transition-colors duration-200 font-medium">Guide</a>
							<a href="/about" class="text-slate-300 hover:text-purple-400 transition-colors duration-200 font-medium">About</a>
							<button class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white px-4 py-2 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg">
								Share
							</button>
						</div>

						<!-- Mobile menu button -->
						<button id="mobile-menu-btn" class="md:hidden text-slate-300 hover:text-white transition-colors duration-200">
							<svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
							</svg>
							<svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
							</svg>
						</button>
					</nav>

					<!-- Mobile menu dropdown -->
					<div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-slate-700/50">
						<div class="pt-4 space-y-3">
							<a href="/" class="block text-slate-300 hover:text-purple-400 transition-colors duration-200 font-medium py-2 px-4 rounded-lg hover:bg-slate-800/50">
								Calculator
							</a>
							<a href="/guide" class="block text-slate-300 hover:text-purple-400 transition-colors duration-200 font-medium py-2 px-4 rounded-lg hover:bg-slate-800/50">
								Guide
							</a>
							<a href="/about" class="block text-slate-300 hover:text-purple-400 transition-colors duration-200 font-medium py-2 px-4 rounded-lg hover:bg-slate-800/50">
								About
							</a>
							<div class="pt-2">
								<button class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white px-4 py-2 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg">
									Share
								</button>
							</div>
						</div>
					</div>

					<!-- Hero section -->
					<div class="text-center">
						<h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold bg-gradient-to-r from-purple-400 via-pink-400 to-purple-400 bg-clip-text text-transparent mb-4">
							1RM Calculator
						</h1>
						<p class="text-slate-300 text-lg sm:text-xl max-w-2xl mx-auto mb-6">
							Calculate your one-rep max with precision using scientifically proven formulas
						</p>
						
						<!-- Feature badges -->
						<div class="flex flex-wrap justify-center gap-3 mb-6">
							<span class="px-3 py-1 bg-purple-600/20 text-purple-300 rounded-full text-sm border border-purple-500/30">
								4 Proven Formulas
							</span>
							<span class="px-3 py-1 bg-pink-600/20 text-pink-300 rounded-full text-sm border border-pink-500/30">
								Real-time Results
							</span>
							<span class="px-3 py-1 bg-blue-600/20 text-blue-300 rounded-full text-sm border border-blue-500/30">
								Training Percentages
